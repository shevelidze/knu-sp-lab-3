{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "build",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}/src/main.cpp",
        "-o",
        "${workspaceFolder}/build/main"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
